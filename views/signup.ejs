<%- include('header') %>
  <div class="register-title"><i class="iconfont icon-fanhui" onclick="window.history.back(-1)"></i>注册</div>
  <div class="register-contain">
    <form method="post" enctype="multipart/form-data">
        <div class="form-item">
          <div class="form-photo"></div>
        </div>
        <div class="form-item">
            <input type="text" placeholder="用户名" class="input-control" name="name">
            <i class="iconfont icon-zhanghao"></i>
        </div>
        <div class="form-item">
            <input type="password" placeholder="密码" class="input-control" name="password">
            <i class="iconfont icon-mima1"></i>
        </div>
        <div class="form-item">
            <input type="password" placeholder="密码确认" class="input-control" name="repassword">
            <i class="iconfont icon-mima1"></i>
        </div>
        <div class="form-item">
           <select class="sel-control" name="gender">
              <option value="m">男</option>
              <option value="f">女</option>
              <option value="x">保密</option>
           </select>
        </div>
        <div class="form-item">
          <!-- <button class="btn btn-orange">上传头像</button> -->
          <input type="file" name="avatar" style="height:4rem; width:90%;font-size:2rem;color:#fff;">
        </div>
        <div class="form-item">
            <textarea name="bio" rows="5" placeholder="个人简介" class="input-control" style="height:8rem;line-height:4rem;"></textarea>
          </div>
          <button class="btn btn-control btn-orange" style="background-color:#DF7614;color:#fff;margin-top:4rem;" onclick="location.href='/signup'">注册账号</button>
          <!-- <input type="submit" value="注册账号" class="btn btn-control btn-orange"> -->
    </form>
  </div>
</div>
<%- include('footer') %>