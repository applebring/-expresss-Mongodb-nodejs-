<%- include('header') %>
<div class="header-bar"><i class="iconfont icon-fanhui" onclick="window.history.back(-1)" style="left:1rem;"></i>编辑文章<i class="iconfont icon-shezhi logout" style="right:1rem;top:1rem;font-size:3rem;" onclick="window.location.href='/logout'"></i></div>
<div class="write-contain">
    <div class="four wide column" style="margin:1rem;text-align:center;">
        <a class="avatar"
           href="/myblog?author=<%= user._id %>"
           data-title="<%= user.name %> | <%= ({m: '男', f: '女', x: '保密'})[user.gender] %>"
           data-content="<%= user.bio %>">
          <img class="avatar" src="/imgupload/<%= user.avatar %>">
        </a>
      </div>
  <form method="post" class="write-form" action="/myblog/<%= post._id %>/edit">
    <div class="form-group">
      <label>标题</label><br/>
      <input type="text" name="title" class="input-control" value="<%= post.title %>">
    </div>
    <div class="form-group">
      <label>内容</label><br/>
      <textarea name="content" rows="15" class="text-control"><%= post.content %></textarea>
    </div>
    <input type="submit" class="btn btn-orange" value="确认修改"> 
    <!-- <div class="btn-group">
      <input type="submit" class="btn" value="草稿"> 
      <input type="submit" class="btn" value="发表"> 
    </div> -->
  </form>
</div>
<%- include('navbar') %>