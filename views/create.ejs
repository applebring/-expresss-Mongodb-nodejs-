<%- include('header') %>
<div class="header-bar"><i class="iconfont icon-fanhui" onclick="window.history.back(-1)" style="left:1rem;"></i>发表文章<i class="iconfont icon-shezhi logout" style="right:1rem;top:1rem;font-size:3rem;" onclick="window.location.href='/logout'"></i></div>
<div class="write-contain">
  <form method="post" class="write-form">
    <div class="form-group">
      <label>标题</label><br/>
      <input type="text" name="title" class="input-control">
    </div>
    <div class="form-group">
      <label>内容</label><br/>
      <textarea name="content" rows="15" class="text-control"></textarea>
    </div>
    <div class="btn-group">
      <!-- <input type="submit" class="btn" value="草稿"> 
      <input type="submit" class="btn" value="发表">  -->
      <!-- <button style="font-size:3rem" class="caogao">草稿</button> -->
      <input type="submit" class="btn" value="发表">
    </div>
  </form>
</div>
<!--脚步固定栏-->
<ul class="footer-list">
  <li data-type="0"><i class="iconfont icon-zhuye"></i><br/><span>主页</span></li>
  <li class="active" data-type="1"><i class="iconfont icon-bokeyuan"></i><br/><span>博客</span></li>
  <li data-type="2"><i class="iconfont icon-bokeyuan"></i><br/><span>发布</span></li>
</ul>
<!-- jQuery 2.1.4 -->
<script src="/libs/jQuery/jquery-2.2.3.min.js"></script>
<!-- Bootstrap 3.3.5 -->
<script src="/libs/bootstrap-3.3.6/js/bootstrap.min.js"></script>
<!-- 弹框layer.js 自动加载css -->
<script src="/libs/layer/layer.js"></script>
<!--公用common.js-->
<script src="/js/common.mobi.js"></script>
<script>
$(function(){
  page.init();
});
var page = (function(){
  var componentInit = function(){
    // $.msg("提示框内容",5);
    $(".footer-list").on("click","li",function(){
      console.log("this",this);
      if(!$(this).hasClass("active")){
        $(this).addClass("active").siblings(".active").removeClass("active");
       var type = $(this).data("type");
        type=='0'?window.location.href="/posts":type=='1'?window.location.href='/create':window.location.href='/myblog';
      }
    });
    $(".logout").on("click",function(){
      console.log("logout");
    });
  }
  return{
    init:function(){
      componentInit();
    }
  }
})()
</script>
</body>
</html>